<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="185dp"
    android:background="@drawable/room_list_item_bacg"
    android:orientation="horizontal"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/toutiao_order_iv"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/room_pic_default_bcg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/toutiao_first_item_shape"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingLeft="5dp"
            android:paddingTop="6dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.itcalf.renhe.view.TextView
                    android:id="@+id/titleTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/avatarRl"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="今天的新闻"
                    android:textColor="@color/white"
                    android:textSize="@dimen/S4" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>