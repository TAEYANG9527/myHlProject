<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <com.itcalf.renhe.view.RoundImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/A4"
        android:layout_height="@dimen/A4"
        android:layout_margin="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/avatar" />

    <LinearLayout
        android:id="@+id/ly_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <com.itcalf.renhe.view.TextView
                    android:id="@+id/tx_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="周家宝"
                    android:textColor="@color/C1"
                    android:textSize="@dimen/S4" />

                <com.itcalf.renhe.view.TextView
                    android:id="@+id/tx_company"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="销售、北京xxxxx房地产"
                    android:textColor="@color/C2"
                    android:textSize="@dimen/S5" />

                <com.itcalf.renhe.view.TextView
                    android:id="@+id/tx_city"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="杭州、私人投资"
                    android:textColor="@color/C2"
                    android:textSize="@dimen/S5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_audit"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical" >

                <com.itcalf.renhe.view.Button
                    android:id="@+id/iv_add"
                    android:layout_width="55dp"
                    android:layout_height="30dp"
                    android:background="@drawable/purple_archieve_edit_bt_selected"
                    android:text="同意"
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <com.itcalf.renhe.view.TextView
                    android:id="@+id/tx_join_type"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="已通过"
                    android:textColor="@color/C2"
                    android:textSize="@dimen/S5"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="5dp"
            android:background="@color/BC_1" />

        <com.itcalf.renhe.view.TextView
            android:id="@+id/tx_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:maxLines="2"
            android:text="我能提供某种能力"
            android:textColor="@color/C1"
            android:textSize="@dimen/S4" />
    </LinearLayout>

</LinearLayout>