<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/BC_3"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/base_tool_bar" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarLayout"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="20dp">

        <!-- 提醒设置 -->

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/LH2"
            android:layout_marginRight="15dp"
            android:background="@color/white">

            <com.itcalf.renhe.view.TextView
                android:id="@+id/message_notify_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="接收新消息通知"
                android:textColor="@color/blog_item_nickname_text"
                android:textSize="@dimen/setting_item_textsize" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/message_notify_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:checked="true" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/separate_line" />

        <LinearLayout
            android:id="@+id/notify_subitem_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/LH2"
                android:layout_marginRight="15dp">

                <com.itcalf.renhe.view.TextView
                    android:id="@+id/sound_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="声音"
                    android:textColor="@color/blog_item_nickname_text"
                    android:textSize="@dimen/setting_item_textsize" />

                <com.itcalf.renhe.view.TextView
                    android:id="@+id/sound_tv_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sound_tv"
                    android:textColor="@color/blog_item_nickname_text"
                    android:textSize="@dimen/setting_item_sub_textsize"
                    android:visibility="gone" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/sound_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:checked="true" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/separate_line" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/LH2"
                android:layout_marginRight="15dp">

                <com.itcalf.renhe.view.TextView
                    android:id="@+id/warnshake_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="震动"
                    android:textColor="@color/blog_item_nickname_text"
                    android:textSize="@dimen/setting_item_textsize" />

                <com.itcalf.renhe.view.TextView
                    android:id="@+id/warnshake_tv_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/warnshake_tv"
                    android:textColor="@color/blog_item_nickname_text"
                    android:textSize="@dimen/setting_item_sub_textsize"
                    android:visibility="gone" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/warnshake_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:checked="true" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/separate_line" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/LH2"
                android:layout_marginRight="15dp">

                <com.itcalf.renhe.view.TextView
                    android:id="@+id/led_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="LED"
                    android:textColor="@color/blog_item_nickname_text"
                    android:textSize="@dimen/setting_item_textsize" />

                <com.itcalf.renhe.view.TextView
                    android:id="@+id/led_tv_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/led_tv"
                    android:textColor="@color/blog_item_nickname_text"
                    android:textSize="@dimen/setting_item_sub_textsize"
                    android:visibility="gone" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/led_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:checked="true" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>