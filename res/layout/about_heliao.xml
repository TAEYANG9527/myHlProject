<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BC_3"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/base_tool_bar" />
    <!--常见问题 -->
    <RelativeLayout
        android:id="@+id/common_problems_Rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/list_item_bacg"
        android:paddingBottom="@dimen/edit_margin"
        android:paddingLeft="@dimen/edit_margin"
        android:paddingRight="10dp"
        android:paddingTop="@dimen/edit_margin"
        android:visibility="gone">

        <com.itcalf.renhe.view.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="常见问题"
            android:textColor="@color/C1"
            android:textSize="@dimen/S4" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/archieve_goto" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/feedback_Rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_bacg"
            android:paddingBottom="@dimen/edit_margin"
            android:paddingLeft="@dimen/edit_margin"
            android:paddingRight="10dp"
            android:paddingTop="@dimen/edit_margin">

            <com.itcalf.renhe.view.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="意见反馈"
                android:textColor="@color/C1"
                android:textSize="@dimen/S4" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/archieve_goto" />

        </RelativeLayout>

        <View
            android:id="@+id/divide_auth"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dp"
            android:background="@color/separate_line" />

        <RelativeLayout
            android:id="@+id/service_terms_Rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_bacg"
            android:paddingBottom="@dimen/edit_margin"
            android:paddingLeft="@dimen/edit_margin"
            android:paddingRight="10dp"
            android:paddingTop="@dimen/edit_margin">

            <com.itcalf.renhe.view.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="服务条款"
                android:textColor="@color/C1"
                android:textSize="@dimen/S4" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/archieve_goto" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dp"
            android:background="@color/separate_line" />

        <RelativeLayout
            android:id="@+id/check_update_Rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_bacg"
            android:paddingBottom="@dimen/edit_margin"
            android:paddingLeft="@dimen/edit_margin"
            android:paddingRight="10dp"
            android:paddingTop="@dimen/edit_margin">

            <com.itcalf.renhe.view.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="检查更新"
                android:textColor="@color/C1"
                android:textSize="@dimen/S4" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <com.itcalf.renhe.view.TextView
                    android:id="@+id/heliao_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/versionname"
                    android:textColor="@color/C2"
                    android:textSize="@dimen/S4" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/archieve_goto" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dp"
            android:background="@color/separate_line" />

        <RelativeLayout
            android:id="@+id/clear_cache_Rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_bacg"
            android:paddingBottom="@dimen/edit_margin"
            android:paddingLeft="@dimen/edit_margin"
            android:paddingRight="10dp"
            android:paddingTop="@dimen/edit_margin">

            <com.itcalf.renhe.view.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="清除缓存"
                android:textColor="@color/C1"
                android:textSize="@dimen/S4" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <com.itcalf.renhe.view.TextView
                    android:id="@+id/cache_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/C2"
                    android:textSize="@dimen/S4" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/archieve_goto" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
