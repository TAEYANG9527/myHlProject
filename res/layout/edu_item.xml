<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/edu_item_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_height"
        android:background="@drawable/edit_archieve_sub_item_bacg"
        android:clickable="true"
        android:paddingLeft="@dimen/edit_margin"
        android:paddingRight="@dimen/edit_margin">


        <ImageView
            android:id="@+id/arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/search_flag" />

        <com.itcalf.renhe.view.TextView
            android:id="@+id/time_info_tv"
            style="@style/titleTextSizeWithSmallBlack"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/arrow_iv"
            android:text="2015.3-至今"
            android:textColor="@color/C3"
            android:textSize="@dimen/S4" />

        <com.itcalf.renhe.view.TextView
            android:id="@+id/school_tv"
            style="@style/titleTextSizeWithSmallBlack"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/time_info_tv"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="教育经历"
            android:textColor="@color/C1"
            android:textSize="@dimen/S4" />
    </RelativeLayout>

    <View
        android:id="@+id/separate_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:background="@color/separate_line" />
</LinearLayout>