<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_transparent">

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp">

        <com.itcalf.renhe.view.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="分享到"
            android:textColor="#999999"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/separate_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/qqLl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:id="@+id/qqiv"
                    android:layout_width="@dimen/share_icon_width"
                    android:layout_height="@dimen/share_icon_width"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/qq_share_selector" />

                <com.itcalf.renhe.view.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="QQ"
                    android:textColor="#999999"
                    android:textSize="@dimen/S6" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/weixinLl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:id="@+id/weixiniv"
                    android:layout_width="@dimen/share_icon_width"
                    android:layout_height="@dimen/share_icon_width"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/weixin_share_selector" />

                <com.itcalf.renhe.view.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="微信"
                    android:textColor="#999999"
                    android:textSize="@dimen/S6" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/friendLl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:id="@+id/friendiv"
                    android:layout_width="@dimen/share_icon_width"
                    android:layout_height="@dimen/share_icon_width"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/weixingroup_share_selector" />

                <com.itcalf.renhe.view.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="朋友圈"
                    android:textColor="#999999"
                    android:textSize="@dimen/S6" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/weiboLl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:id="@+id/weiboiv"
                    android:layout_width="@dimen/share_icon_width"
                    android:layout_height="@dimen/share_icon_width"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/weibo_share_selector" />

                <com.itcalf.renhe.view.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxLength="4"
                    android:text="微博"
                    android:textColor="#999999"
                    android:textSize="@dimen/S6" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/renmaiQuanLl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:id="@+id/renmaiQuaniv"
                    android:layout_width="@dimen/share_icon_width"
                    android:layout_height="@dimen/share_icon_width"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/renmaiquan_share_selector" />

                <com.itcalf.renhe.view.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="人脉圈"
                    android:textColor="#999999"
                    android:textSize="@dimen/S6" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/renmaiFriendLl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:id="@+id/renmaiFriendiv"
                    android:layout_width="@dimen/share_icon_width"
                    android:layout_height="@dimen/share_icon_width"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/renhefriends_share_selector" />

                <com.itcalf.renhe.view.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="朋友"
                    android:textColor="#999999"
                    android:textSize="@dimen/S6" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/blankLl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/blankIv"
                    android:layout_width="@dimen/share_icon_width"
                    android:layout_height="@dimen/share_icon_width"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/renmaiquan_share_selector" />

                <com.itcalf.renhe.view.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="人脉圈"
                    android:textColor="#999999"
                    android:textSize="@dimen/S6" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/blankLl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/blankIv2"
                    android:layout_width="@dimen/share_icon_width"
                    android:layout_height="@dimen/share_icon_width"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/renhefriends_share_selector" />

                <com.itcalf.renhe.view.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="朋友"
                    android:textColor="#999999"
                    android:textSize="@dimen/S6" />
            </LinearLayout>
        </LinearLayout>

        <com.itcalf.renhe.view.Button
            android:id="@+id/item_popupwindows_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#f3f3f3"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="取消"
            android:textColor="@drawable/actionbar_home_textcolor_selected"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>