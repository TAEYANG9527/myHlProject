<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/base_tool_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarLayout"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.itcalf.renhe.view.TextView
            android:id="@+id/mobilemail_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/import_maillist"
            android:textColor="#999999"
            android:textSize="@dimen/textSize14" />

        <com.itcalf.renhe.view.Button
            android:id="@+id/import_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/purple_archieve_edit_bt_selected"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="导入通讯录"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>

    <com.itcalf.renhe.view.TextView
        android:id="@+id/dump_import_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:text="跳过"
        android:textColor="@color/blue" />

</RelativeLayout>