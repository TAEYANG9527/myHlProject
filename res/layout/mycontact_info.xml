<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_archieve_sub_item_bacg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/archive_item_info_padding"
        android:paddingLeft="@dimen/archive_item_info_padding"
        android:paddingTop="@dimen/archive_item_info_padding">

        <com.itcalf.renhe.view.TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/provide_get_textcolor"
            android:textSize="@dimen/new_archive_job_textsize" />

        <com.itcalf.renhe.view.TextView
            android:id="@+id/valueTv"
            style="@style/titleTextSizeWithSmallBlack"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/edit_margin"
            android:textColorLink="@color/room_at_color"
            android:textSize="@dimen/new_archive_job_textsize" />

    </LinearLayout>

    <View
        android:id="@+id/contact_seperate"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="70dp"
        android:background="@color/separate_line" />

</LinearLayout>