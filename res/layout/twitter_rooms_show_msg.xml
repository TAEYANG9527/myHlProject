<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootRl"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/base_tool_bar" />

    <com.itcalf.renhe.view.TextView
        android:id="@+id/deleted_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarLayout"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="该动态已经被删除！"
        android:textColor="@color/red"
        android:textSize="18sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/bottom_reply_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/BC_1" />

        <RelativeLayout
            android:id="@+id/bottom_reply_rl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/bottom_reply_rl_rightbt"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <ImageButton
                    android:id="@+id/gotoReply"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/room_item_new_bacg_selector"
                    android:padding="10dp"
                    android:src="@drawable/ic_room_social_send_now" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignBottom="@+id/gotoReply"
                    android:layout_alignTop="@+id/gotoReply"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bottom_reply_rll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/bottom_reply_rl_rightbt"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <RelativeLayout
                    android:id="@+id/bottom_reply_rl_rightrl"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/bottom_reply_rl_leftrl"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/bottom_reply_rl_leftrl">

                    <com.itcalf.renhe.view.TextView
                        android:id="@+id/leftreply_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/separate_line" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bottom_reply_rl_leftrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/bottom_reply_rl_rightrl">

                    <CheckBox
                        android:id="@+id/forwardCk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="转发"
                        android:textColor="@color/search_edit_stroke_bcg"
                        android:textSize="13sp"
                        android:visibility="gone" />

                    <com.itcalf.renhe.view.EditText
                        android:id="@+id/reply_edt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@+id/forwardCk"
                        android:background="@drawable/im_chat_edittext_selector"
                        android:hint="评论"
                        android:maxHeight="80dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="35dp"
                        android:paddingTop="8dp"
                        android:textColor="@color/C1"
                        android:textColorHint="@color/C2"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/image_face"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_alignBottom="@id/reply_edt"
                        android:layout_alignRight="@id/reply_edt"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="5dp"
                        android:paddingRight="3dp"
                        android:src="@drawable/chat_emo_normal"
                        android:visibility="visible" />
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/separate_line" />

        <!-- <include
             android:id="@+id/chat_face_container"
             layout="@layout/chat_face_container"
             android:visibility="gone" />-->
        <LinearLayout
            android:id="@+id/chat_face_container"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:orientation="vertical"
            android:visibility="gone" />
    </LinearLayout>

    <com.itcalf.widget.scrollview.ScrollViewX
        android:id="@+id/room_showmsg_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom_reply_ll"
        android:layout_below="@+id/toolbarLayout"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:id="@+id/rootLl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/room_list_item_bacg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/hall_item_top_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.itcalf.renhe.view.TextView
                            android:id="@+id/source_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="8dp"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:textColor="@color/new_room_item_time_textcolor"
                            android:textSize="@dimen/room_format_time_textsize" />

                        <com.itcalf.renhe.view.TextView
                            android:id="@+id/addfriend_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/rec_white_bcg_selector"
                            android:ellipsize="marquee"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="+加好友"
                            android:textColor="@color/new_room_item_username_textcolor"
                            android:textSize="@dimen/S7"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:id="@+id/avatar_img_ll"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentLeft="true">

                            <com.itcalf.renhe.view.RoundImageView
                                android:id="@+id/avatar_img"
                                android:layout_width="@dimen/renhe_new_room_image_wh"
                                android:layout_height="@dimen/renhe_new_room_image_wh"
                                android:layout_centerInParent="true"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/avatar" />

                            <ImageView
                                android:id="@+id/vipImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true" />

                            <ImageView
                                android:id="@+id/realnameImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignTop="@+id/avatar_img_ll"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="100dp"
                            android:layout_toRightOf="@+id/avatar_img_ll"
                            android:gravity="center_vertical">

                            <com.itcalf.renhe.view.TextView
                                android:id="@+id/username_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/new_room_item_username_textcolor"
                                android:textSize="@dimen/S6" />

                            <ImageView
                                android:id="@+id/rightImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@id/username_txt"
                                android:layout_marginBottom="@dimen/vip_margin"
                                android:layout_marginLeft="5dp"
                                android:contentDescription="@string/app_name"
                                android:visibility="gone" />

                            <com.itcalf.renhe.view.TextView
                                android:id="@+id/companyTv"
                                style="@style/titleTextSizeWithBlack"
                                android:layout_alignLeft="@+id/username_txt"
                                android:layout_below="@+id/username_txt"
                                android:layout_marginTop="3dp"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:textColor="@color/new_room_item_time_textcolor"
                                android:textSize="@dimen/S7" />

                            <com.itcalf.renhe.view.TextView
                                android:id="@+id/industryTv"
                                style="@style/titleTextSizeWithBlack"
                                android:layout_alignLeft="@+id/username_txt"
                                android:layout_below="@id/companyTv"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:textColor="@color/new_room_item_time_textcolor"
                                android:textSize="@dimen/S7"
                                android:visibility="gone" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/main_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/content_Rl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/renmai_item_content_selector"
                            android:clickable="true">

                            <com.itcalf.renhe.widget.emojitextview.AisenTextView
                                android:id="@+id/content_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="@dimen/lineSpacing"
                                android:textColor="@color/new_room_item_job_textcolor"
                                android:textSize="@dimen/S3" />
                        </RelativeLayout>

                        <FrameLayout
                            android:id="@+id/thumbnailFl"
                            android:layout_width="@dimen/addmsg_grid_width"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp">

                            <com.itcalf.renhe.view.NoScrollGridView
                                android:id="@+id/thumbnailGridview"
                                android:layout_width="@dimen/addmsg_grid_width"
                                android:layout_height="wrap_content"
                                android:columnWidth="@dimen/addmsg_grid_item_width"
                                android:horizontalSpacing="3dp"
                                android:numColumns="3"
                                android:scrollbars="none"
                                android:verticalSpacing="3dp"></com.itcalf.renhe.view.NoScrollGridView>

                            <ImageView
                                android:id="@+id/thumbnailPic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:contentDescription="@string/app_name"
                                android:maxHeight="@dimen/addmsg_grid_width"
                                android:maxWidth="@dimen/addmsg_grid_width"
                                android:scaleType="fitStart"
                                android:src="@drawable/none" />
                        </FrameLayout>

                        <LinearLayout
                            android:id="@+id/rawcontentlayout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/raw_selector"
                            android:clickable="true"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <com.itcalf.renhe.widget.emojitextview.AisenTextView
                                android:id="@+id/rawcontent_txt"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="@dimen/lineSpacing"
                                android:paddingRight="@dimen/room_item_forward_padding"
                                android:textColor="@color/new_room_item_job_textcolor"
                                android:textSize="@dimen/S6" />

                            <FrameLayout
                                android:id="@+id/forwardThumbnailFl"
                                android:layout_width="@dimen/addmsg_grid_width"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp">

                                <com.itcalf.renhe.view.NoScrollGridView
                                    android:id="@+id/forwardThumbnailGridview"
                                    android:layout_width="@dimen/addmsg_grid_width"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:columnWidth="@dimen/addmsg_grid_item_width"
                                    android:horizontalSpacing="3dp"
                                    android:numColumns="3"
                                    android:scrollbars="none"
                                    android:verticalSpacing="3dp"></com.itcalf.renhe.view.NoScrollGridView>

                                <ImageView
                                    android:id="@+id/forwardThumbnailPic"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:contentDescription="@string/app_name"
                                    android:scaleType="fitStart"
                                    android:src="@drawable/none" />
                            </FrameLayout>

                            <LinearLayout
                                android:id="@+id/rawcontentlayout_ll"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content">

                                    <com.itcalf.renhe.view.TextView
                                        android:id="@+id/dialog_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_marginLeft="5dp"
                                        android:text="圈子"
                                        android:textColor="@color/C1"
                                        android:textSize="@dimen/S6" />

                                    <View
                                        android:id="@+id/seperate_line"
                                        android:layout_width="fill_parent"
                                        android:layout_height="1px"
                                        android:layout_below="@+id/dialog_title"
                                        android:layout_marginBottom="10dp"
                                        android:layout_marginTop="10dp"
                                        android:background="@color/separate_line" />

                                    <RelativeLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/seperate_line">

                                        <FrameLayout
                                            android:id="@+id/sharePicFl"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <ImageView
                                                android:id="@+id/sharePic"
                                                android:layout_width="50dp"
                                                android:layout_height="50dp"
                                                android:layout_marginRight="10dp"
                                                android:scaleType="fitStart"
                                                android:src="@drawable/none" />

                                            <com.itcalf.renhe.view.RoundImageView
                                                android:id="@+id/circle_sharePic"
                                                android:layout_width="50dp"
                                                android:layout_height="50dp"
                                                android:layout_marginRight="10dp"
                                                android:scaleType="fitStart"
                                                android:src="@drawable/none" />
                                        </FrameLayout>

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="50dp"
                                            android:layout_alignBottom="@+id/sharePicFl"
                                            android:layout_alignTop="@+id/sharePicFl"
                                            android:layout_toRightOf="@+id/sharePicFl"
                                            android:gravity="center_vertical">

                                            <com.itcalf.renhe.view.TextViewFixTouchConsume
                                                android:id="@+id/share_content_tv"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:ellipsize="end"
                                                android:gravity="center_vertical"
                                                android:paddingRight="@dimen/room_item_forward_padding"
                                                android:singleLine="true"
                                                android:textColor="@color/C1"
                                                android:textSize="@dimen/S6" />

                                            <com.itcalf.renhe.view.TextViewFixTouchConsume
                                                android:id="@+id/forward_content_tv"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignLeft="@+id/share_content_tv"
                                                android:layout_below="@+id/share_content_tv"
                                                android:ellipsize="end"
                                                android:gravity="center_vertical"
                                                android:paddingRight="@dimen/room_item_forward_padding"
                                                android:singleLine="true"
                                                android:textColor="@color/C2"
                                                android:textSize="@dimen/S6" />

                                            <com.itcalf.renhe.view.TextViewFixTouchConsume
                                                android:id="@+id/forward_content_tv2"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignLeft="@+id/share_content_tv"
                                                android:layout_below="@+id/forward_content_tv"
                                                android:ellipsize="end"
                                                android:gravity="center_vertical"
                                                android:paddingRight="@dimen/room_item_forward_padding"
                                                android:singleLine="true"
                                                android:textColor="@color/C2"
                                                android:textSize="@dimen/S6" />
                                        </RelativeLayout>
                                    </RelativeLayout>
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/circle_good_height"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:id="@+id/reply_and_good_ll_good_ll"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/circle_good_height"
                            android:layout_alignParentLeft="true"
                            android:background="@drawable/praise_bg"
                            android:orientation="horizontal"
                            android:paddingLeft="11dp"
                            android:paddingRight="11dp"
                            android:visibility="invisible">

                            <ImageView
                                android:id="@+id/un_reply_and_good_ll_good_iv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ungood_number_icon" />

                            <ImageView
                                android:id="@+id/reply_and_good_ll_good_iv1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/good_number_icon"
                                android:visibility="gone" />

                            <com.itcalf.renhe.view.TextView
                                android:id="@+id/reply_and_good_ll_good_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="3dp"
                                android:layout_toRightOf="@+id/reply_and_good_ll_good_iv"
                                android:text="1"
                                android:textColor="@color/CP"
                                android:textSize="@dimen/S7"
                                android:visibility="gone" />
                        </LinearLayout>

                        <com.itcalf.renhe.view.TextView
                            android:id="@+id/datetime_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:textColor="@color/new_room_item_time_textcolor"
                            android:textSize="@dimen/S7" />

                        <ImageView
                            android:id="@+id/commentIv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/coment_pressed" />

                        <LinearLayout
                            android:id="@+id/three_ll"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <LinearLayout
                                android:id="@+id/forwordBt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <com.itcalf.renhe.view.Button
                                    android:id="@+id/room_item_reforward"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:clickable="false"
                                    android:drawablePadding="5dp"
                                    android:text="@string/room_forward"
                                    android:textColor="@color/new_room_item_time_textcolor"
                                    android:textSize="@dimen/room_format_time_textsize" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/room_item_good_ll"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/goodiv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/good_p" />

                                <com.itcalf.renhe.view.Button
                                    android:id="@+id/room_item_good"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:background="@android:color/transparent"
                                    android:clickable="false"
                                    android:text="@string/room_good"
                                    android:textColor="@color/new_room_item_time_textcolor"
                                    android:textSize="@dimen/room_format_time_textsize" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/room_item_reply_ll"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="horizontal">

                                <com.itcalf.renhe.view.Button
                                    android:id="@+id/room_item_reply"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:clickable="false"
                                    android:drawablePadding="5dp"
                                    android:text="@string/room_reply"
                                    android:textColor="@color/new_room_item_time_textcolor"
                                    android:textSize="@dimen/room_format_time_textsize" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/room_item_share_ll"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="horizontal">

                                <com.itcalf.renhe.view.Button
                                    android:id="@+id/room_item_share"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:clickable="false"
                                    android:drawablePadding="5dp"
                                    android:text="@string/room_share"
                                    android:textColor="@color/new_room_item_time_textcolor"
                                    android:textSize="@dimen/room_format_time_textsize" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/reply_and_good_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/reply_and_good_rl_footer_layout_ing"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <com.itcalf.renhe.view.TextView
                            android:id="@+id/reply_and_good_rl_titleTv_ing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:paddingBottom="@dimen/room_reply_footer"
                            android:paddingTop="@dimen/room_reply_footer"
                            android:text="加载中..."
                            android:textColor="@color/C1"
                            android:textSize="13sp" />

                        <ProgressBar
                            android:id="@+id/reply_and_good_rl_waitPb"
                            style="?android:attr/progressBarStyleSmallInverse"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="3dp"
                            android:layout_toLeftOf="@+id/reply_and_good_rl_titleTv_ing" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/reply_and_good_ll"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="5dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:visibility="gone">

                        <View
                            android:id="@+id/good_sepreateView"
                            android:layout_width="fill_parent"
                            android:layout_height="1px"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="#d6d6d6"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:id="@+id/reply_and_good_ll_good_rl"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp">

                            <ImageView
                                android:id="@+id/reply_and_good_ll_good_iv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="6dp"
                                android:src="@drawable/good_blue" />

                            <com.itcalf.renhe.view.NoScrollGridView
                                android:id="@+id/reply_and_good_ll_goodGridview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@+id/reply_and_good_ll_good_iv"
                                android:columnWidth="@dimen/circle_good_height"
                                android:horizontalSpacing="3dp"
                                android:numColumns="auto_fit"
                                android:scrollbars="none"
                                android:stretchMode="columnWidth"
                                android:verticalSpacing="3dp" />
                        </RelativeLayout>

                        <View
                            android:id="@+id/reply_and_good_ll_seperateline"
                            android:layout_width="fill_parent"
                            android:layout_height="1px"
                            android:layout_below="@+id/reply_and_good_ll_good_rl"
                            android:layout_marginTop="10dp"
                            android:background="#d6d6d6"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/reply_list_ll"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/reply_and_good_ll_seperateline"
                            android:orientation="vertical">

                            <com.itcalf.renhe.view.ListviewWithScroolview
                                android:id="@+id/reply_listView"
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:cacheColorHint="#00000000"
                                android:divider="@null"
                                android:dividerHeight="0px"
                                android:fastScrollEnabled="true"
                                android:fillViewport="true"
                                android:scrollbars="none"
                                android:smoothScrollbar="false"
                                android:visibility="gone" />

                            <RelativeLayout
                                android:id="@+id/footer_layout"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <RelativeLayout
                                    android:id="@+id/footer_layout_more"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="true">

                                    <com.itcalf.renhe.view.TextView
                                        android:id="@+id/titleTv_more"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:gravity="center"
                                        android:paddingBottom="@dimen/room_reply_footer"
                                        android:paddingTop="@dimen/room_reply_footer"
                                        android:text="加载更多"
                                        android:textColor="@color/C1"
                                        android:textSize="13sp" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/footer_layout_ing"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone">

                                    <com.itcalf.renhe.view.TextView
                                        android:id="@+id/titleTv_ing"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:gravity="center"
                                        android:paddingBottom="@dimen/room_reply_footer"
                                        android:paddingTop="@dimen/room_reply_footer"
                                        android:text="加载中..."
                                        android:textColor="@color/C1"
                                        android:textSize="13sp" />

                                    <ProgressBar
                                        android:id="@+id/waitPb"
                                        style="?android:attr/progressBarStyleSmallInverse"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="3dp"
                                        android:layout_toLeftOf="@+id/titleTv_ing" />
                                </RelativeLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/blank_rl"
                                android:layout_width="fill_parent"
                                android:layout_height="200dp"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/noreplyiv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/noreply" />

                                <com.itcalf.renhe.view.TextView
                                    android:id="@+id/balnk_rl_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/noreplyiv"
                                    android:layout_centerInParent="true"
                                    android:text="@string/no_reply"
                                    android:textColor="@color/blog_item_date_text" />
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />
        </LinearLayout>
    </com.itcalf.widget.scrollview.ScrollViewX>

    <include
        android:id="@+id/no_network_ll"
        layout="@layout/no_newwork_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarLayout" />

</RelativeLayout>