<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@drawable/icon_auth_photoexample" />

            <com.itcalf.renhe.view.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/nameauth_steptwo_photoillus"
                android:textColor="@color/C2"
                android:textSize="@dimen/S4" />

            <com.itcalf.renhe.view.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:gravity="center_horizontal"
                android:text="@string/nameauth_steptwo_photohint"
                android:textColor="@color/C1"
                android:textSize="@dimen/S4" />

            <com.itcalf.renhe.view.Button
                android:id="@+id/btn_photo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/LH1"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_bg_color56c9e8_roundrect_shape"
                android:text="@string/nameauth_steptwo_photo"
                android:textColor="@drawable/archive_editbt_textcolor_selected"
                android:textSize="@dimen/S2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" >

                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@color/separate_line" />

                <com.itcalf.renhe.view.TextView
                    android:id="@+id/tv_or"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="æˆ–"
                    android:textColor="@color/C2"
                    android:textSize="@dimen/S4" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@color/separate_line" />
            </LinearLayout>

            <com.itcalf.renhe.view.TextView
                android:id="@+id/tv_payword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textColor="@color/C1"
                android:textSize="@dimen/S4" />

            <com.itcalf.renhe.view.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="@string/nameauth_steptwo_authword"
                android:textColor="@color/C2"
                android:textSize="@dimen/S4" />

            <com.itcalf.renhe.view.Button
                android:id="@+id/btn_powerauth"
                android:layout_width="match_parent"
                android:layout_height="@dimen/LH1"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_bg_color56c9e8_roundrect_shape"
                android:text="@string/nameauth_steptwo_powerauth"
                android:textColor="@drawable/archive_editbt_textcolor_selected"
                android:textSize="@dimen/S2" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>