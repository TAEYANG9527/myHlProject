<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="30dp"
    android:background="@drawable/coupons_overdue_bg"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="40dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="￥"
            android:textColor="@color/coupon_overdue_color"
            android:textSize="@dimen/S2" />

        <TextView
            android:id="@+id/coupon_amount"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@color/coupon_overdue_color"
            android:textSize="36sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.itcalf.renhe.view.TextView
                android:id="@+id/coupon_use_conditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="使用条件："
                android:textColor="@color/C5" />

            <com.itcalf.renhe.view.TextView
                android:id="@+id/coupon_validity_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:singleLine="true"
                android:text="有效期：2015.12.12"
                android:textColor="@color/C5" />

            <com.itcalf.renhe.view.TextView
                android:id="@+id/coupon_exchange_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:singleLine="true"
                android:text="兑换码：123-456-7890"
                android:textColor="@color/C5"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/coupons_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:text="@string/coupons_type_upgrade"
        android:textColor="@color/white"
        android:textSize="@dimen/S7"
        android:visibility="gone" />
</RelativeLayout>