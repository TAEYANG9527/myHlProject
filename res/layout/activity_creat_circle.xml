<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BC_3"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/base_tool_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarLayout"
        android:paddingBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ly_circle_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.itcalf.renhe.view.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="20dp"
                        android:text="圈子"
                        android:textColor="@color/C1"
                        android:textSize="@dimen/renhe_format_tab_textsize" />

                    <com.itcalf.renhe.view.TextView
                        android:id="@+id/tx_circle_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.0"
                        android:gravity="right"
                        android:textColor="@color/C4"
                        android:textSize="@dimen/archieve_job_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:src="@drawable/search_flag" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_circle_join"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_selector"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="20dp">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.7dp"
                    android:background="#D9D9D9" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingRight="20dp">

                    <com.itcalf.renhe.view.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="20dp"
                        android:text="加入方式"
                        android:textColor="@color/C1"
                        android:textSize="@dimen/renhe_format_tab_textsize" />

                    <com.itcalf.renhe.view.TextView
                        android:id="@+id/tx_circle_join"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.0"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="所有人可以加入"
                        android:textColor="@color/C4"
                        android:textSize="@dimen/archieve_job_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:src="@drawable/search_flag" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_circle_notice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_selector"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="20dp">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.7dp"
                    android:background="#D9D9D9" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="20dp">

                    <com.itcalf.renhe.view.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="20dp"
                        android:text="公告"
                        android:textColor="@color/C1"
                        android:textSize="@dimen/renhe_format_tab_textsize" />

                    <com.itcalf.renhe.view.TextView
                        android:id="@+id/tx_circle_notice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.0"
                        android:gravity="right"
                        android:textColor="@color/C4"
                        android:textSize="@dimen/archieve_job_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:src="@drawable/search_flag" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.7dp"
                android:background="#D9D9D9" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.7dp"
                android:layout_marginTop="20dp"
                android:background="#D9D9D9" />

            <RelativeLayout
                android:id="@+id/ly_add"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_selector"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="20dp">

                <LinearLayout
                    android:id="@+id/ll_circle_member"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="20dp">

                    <com.itcalf.renhe.view.TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:text="圈子成员"
                        android:textColor="@color/C1"
                        android:textSize="@dimen/renhe_format_tab_textsize" />

                    <com.itcalf.renhe.view.TextView
                        android:id="@+id/tx_circle_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="1/50人"
                        android:textColor="@color/C4"
                        android:textSize="@dimen/archieve_job_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:src="@drawable/search_flag" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.7dp"
                    android:layout_below="@id/ll_circle_member"
                    android:layout_marginTop="20dp"
                    android:background="#D9D9D9" />
            </RelativeLayout>

            <GridView
                android:id="@+id/gridView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:cacheColorHint="#00000000"
                android:listSelector="@android:color/transparent"
                android:numColumns="5"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <RelativeLayout
                android:id="@+id/ly_recommend"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:paddingLeft="20dp">

                <View
                    android:id="@+id/add_member_divider"
                    android:layout_width="fill_parent"
                    android:layout_height="0.7dp"
                    android:background="#D9D9D9" />

                <com.itcalf.renhe.view.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/add_member_divider"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:text="添加成员"
                    android:textColor="#323232"
                    android:textSize="@dimen/renhe_format_tab_textsize"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/add_member_divider"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="20dp"
                    android:paddingRight="20dp"
                    android:src="@drawable/search_flag"
                    android:visibility="visible" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.7dp"
                android:background="#D9D9D9" />
        </LinearLayout>
    </ScrollView>

    <com.itcalf.renhe.view.TextView
        android:id="@+id/confirm_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/BS_1"
        android:clickable="true"
        android:gravity="center"
        android:padding="15dp"
        android:text="确定创建"
        android:textColor="@drawable/archive_editbt_textcolor_selected"
        android:textSize="@dimen/S2" />

</RelativeLayout>