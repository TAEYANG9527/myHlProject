<?xml version="1.0" encoding="utf-8"?>
<com.itcalf.renhe.view.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/recommendGridItemImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/upload_portrait" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/recommend_grid_item_shape"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.itcalf.renhe.view.TextView
                android:id="@+id/nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/avatarRl"
                android:ellipsize="end"
                android:maxEms="4"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/vipImage"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/nameTv"
                android:layout_alignTop="@id/nameTv"
                android:layout_toRightOf="@id/nameTv" />

            <com.itcalf.renhe.view.TextView
                android:id="@+id/accountTypeYearPeriodTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/nameTv"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/vipImage"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </RelativeLayout>

        <com.itcalf.renhe.view.TextView
            android:id="@+id/companyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <com.itcalf.renhe.view.TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="11sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/checkLl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/check_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_action_navigation_accept" />
    </RelativeLayout>

</com.itcalf.renhe.view.SquareLayout>