<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.itcalf.widget.slidingmenu.lib.app.SlidingActivity">

    <ImageView
        android:id="@+id/guide_iv"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:background="@drawable/img_up" />

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_viewpager"
        android:layout_width="245dp"
        android:layout_height="130dp" />

    <LinearLayout
        android:id="@+id/guide_dots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:background="@color/white" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg_down_corner_style"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.itcalf.renhe.view.TextView
            android:id="@+id/sure_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="了解更多"
            android:textColor="@drawable/bs_1_textcolor_selected"
            android:textSize="@dimen/S3" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/divider" />

        <com.itcalf.renhe.view.TextView
            android:id="@+id/cancle_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我知道了"
            android:textColor="@drawable/bs_1_textcolor_selected"
            android:textSize="@dimen/S3" />
    </LinearLayout>

</LinearLayout>