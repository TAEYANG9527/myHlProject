<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BC_3"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/base_tool_bar" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/toolbarLayout"
        android:paddingBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.7dp"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:id="@+id/ly_add"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_selector"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="20dp">

                    <com.itcalf.renhe.view.TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="left|center_vertical"
                        android:text="圈子成员"
                        android:textColor="#323232"
                        android:textSize="@dimen/renhe_format_tab_textsize" />

                    <com.itcalf.renhe.view.TextView
                        android:id="@+id/tx_circle_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="left"
                        android:text="1/50人"
                        android:textColor="#A9ADB5"
                        android:textSize="@dimen/room_new_userjob_textsize" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:src="@drawable/search_flag"
                        android:visibility="gone" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.7dp"
                    android:layout_marginTop="20dp"
                    android:background="#D9D9D9" />
            </LinearLayout>

            <GridView
                android:id="@+id/circle_gridView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:cacheColorHint="#00000000"
                android:listSelector="@android:color/transparent"
                android:numColumns="5"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.7dp"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:id="@+id/ly_circle_numb"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_selector"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.itcalf.renhe.view.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:gravity="left|center_vertical"
                        android:text="圈号"
                        android:textColor="#323232"
                        android:textSize="@dimen/renhe_format_tab_textsize" />

                    <com.itcalf.renhe.view.TextView
                        android:id="@+id/tx_circle_numb"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.0"
                        android:gravity="right"
                        android:singleLine="true"
                        android:textColor="#A9ADB5"
                        android:textSize="@dimen/room_new_userjob_textsize" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.7dp"
                    android:layout_marginTop="20dp"
                    android:background="#D9D9D9" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_circle_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_selector"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.itcalf.renhe.view.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:gravity="left|center_vertical"
                        android:text="圈名"
                        android:textColor="#323232"
                        android:textSize="@dimen/renhe_format_tab_textsize" />

                    <com.itcalf.renhe.view.TextView
                        android:id="@+id/tx_circle_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.0"
                        android:gravity="right"
                        android:singleLine="true"
                        android:textColor="#A9ADB5"
                        android:textSize="@dimen/room_new_userjob_textsize" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.7dp"
                    android:layout_marginTop="20dp"
                    android:background="#D9D9D9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_selector"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.itcalf.renhe.view.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:gravity="left|center_vertical"
                        android:text="加入方式"
                        android:textColor="#323232"
                        android:textSize="@dimen/renhe_format_tab_textsize" />

                    <com.itcalf.renhe.view.TextView
                        android:id="@+id/tv_join_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.0"
                        android:gravity="right"
                        android:singleLine="true"
                        android:textColor="#A9ADB5"
                        android:textSize="@dimen/room_new_userjob_textsize" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.7dp"
                    android:layout_marginTop="20dp"
                    android:background="#D9D9D9" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_circle_notice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.itcalf.renhe.view.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:gravity="left|center_vertical"
                        android:text="公告"
                        android:textColor="#323232"
                        android:textSize="@dimen/renhe_format_tab_textsize" />

                    <com.itcalf.renhe.view.TextView
                        android:id="@+id/tx_circle_notice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.0"
                        android:gravity="right"
                        android:singleLine="true"
                        android:textColor="#A9ADB5"
                        android:textSize="@dimen/room_new_userjob_textsize" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.7dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ly_circle_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/setting_selector"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/BS_1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp">

            <com.itcalf.renhe.view.TextView
                android:id="@+id/tx_circle_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请加入"
                android:textColor="@drawable/archive_editbt_textcolor_selected"
                android:textSize="@dimen/S2" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>