<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/circle_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/purple_circle" />

        <ImageView
            android:id="@+id/vertical_line_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-2dp"
            android:src="@drawable/purple_vertical_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-1dp"
        android:background="@drawable/purple_text_shape"
        android:orientation="vertical"
        android:padding="15dp">

        <com.itcalf.renhe.view.TextView
            android:id="@+id/tip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/S3" />

        <com.itcalf.renhe.view.TextView
            android:id="@+id/i_see_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:text="@string/i_see_menu"
            android:textColor="@color/white"
            android:textSize="@dimen/S4" />
    </LinearLayout>
</LinearLayout>