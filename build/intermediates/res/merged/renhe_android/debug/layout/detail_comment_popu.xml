<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/renmaiquan_detail_popwindow_width"
    android:layout_height="@dimen/renmaiquan_popwindow_height"
    android:background="@drawable/comment_bg"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/popu_good_ll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/select_comment_left"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageView
            android:id="@+id/popu_good_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circle_popup_good" />

        <com.itcalf.renhe.view.TextView
            android:id="@+id/popu_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="赞"
            android:textColor="#ffffffff"
            android:textSize="@dimen/S7" />
    </LinearLayout>

    <View
        android:id="@+id/comment_seperate_view"
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:background="@color/C2" />

    <LinearLayout
        android:id="@+id/popu_comment_ll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/select_comment_left"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageView
            android:id="@+id/popu_comment_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circle_comment" />

        <com.itcalf.renhe.view.TextView
            android:id="@+id/popu_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="评论"
            android:textColor="#ffffffff"
            android:textSize="@dimen/S7" />
    </LinearLayout>

    <View
        android:id="@+id/share_seperate_view"
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:background="@color/C2" />

    <LinearLayout
        android:id="@+id/popu_share_ll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/select_comment_right"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageView
            android:id="@+id/popu_share_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circle_share" />

        <com.itcalf.renhe.view.TextView
            android:id="@+id/popu_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="分享"
            android:textColor="#ffffffff"
            android:textSize="@dimen/S7" />
    </LinearLayout>

</LinearLayout>