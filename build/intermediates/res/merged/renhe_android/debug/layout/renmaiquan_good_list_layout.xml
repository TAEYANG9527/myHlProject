        android:visibility="gone"/>

    <ImageView
        android:id="@+id/good_iv_three"
        android:layout_width="@dimen/circle_good_height"
        android:layout_height="@dimen/circle_good_height"
        android:layout_marginLeft="10dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/good_iv_four"
        android:layout_width="@dimen/circle_good_height"
        android:layout_height="@dimen/circle_good_height"
        android:layout_marginLeft="10dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/good_iv_five"
        android:layout_width="@dimen/circle_good_height"
        android:layout_height="@dimen/circle_good_height"
        android:layout_marginLeft="10dp"
        android:visibility="gone"/>
